{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["frontend/*"],
      "@system/*": ["frontend/system/*"],
      "@state/*": ["frontend/state/*"],
      "@types/*": ["frontend/types/*"],
      "@llm/*": ["frontend/llm/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 